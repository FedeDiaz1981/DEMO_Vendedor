---
const { product } = Astro.props;
---
<div id="productModal" class="fixed inset-0 bg-black/40 hidden items-center justify-center z-50">
  <div class="card w-[720px] max-w-[95vw] overflow-hidden">
    <div class="grid grid-cols-1 md:grid-cols-2">
      <img id="modalImg" src={product?.img || ''} alt="" class="w-full h-full object-cover">
      <div class="p-6 flex flex-col gap-3">
        <div class="flex items-start justify-between gap-4">
          <div>
            <h3 id="modalName" class="text-xl font-semibold"></h3>
            <p id="modalDesc" class="text-sm text-gray-600"></p>
          </div>
          <button id="closeModal" class="text-gray-500 hover:text-black">âœ•</button>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <label class="text-sm">Talle
            <select id="modalSize" class="w-full rounded-lg border px-3 py-2 mt-1"></select>
          </label>
          <label class="text-sm">Color
            <select id="modalColor" class="w-full rounded-lg border px-3 py-2 mt-1"></select>
          </label>
        </div>
        <label class="text-sm">Cantidad
          <input id="modalQty" type="number" min="1" value="1" class="w-32 rounded-lg border px-3 py-2 mt-1">
        </label>
        <button id="addToCart" class="rounded-xl bg-sky-600 text-white px-4 py-3 mt-2">Agregar al carrito</button>
      </div>
    </div>
  </div>
</div>

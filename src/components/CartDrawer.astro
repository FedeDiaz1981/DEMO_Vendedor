<aside
  id="cartDrawer"
  class="fixed top-0 right-0 h-full w-[420px] max-w-[90vw] bg-white shadow-xl translate-x-full transition-transform duration-300 z-50 overflow-y-auto"
>
  <div class="p-4 border-b flex items-center justify-between">
    <h2 class="text-lg font-semibold">Tu carrito</h2>
    <button id="closeCart" class="text-gray-500 hover:text-black">Cerrar</button
    >
  </div>
  <div id="cartItems" class="p-4 flex flex-col gap-3"></div>
  <div class="p-4 border-t">
    <div class="items-center justify-between mb-3 hidden">
      <span class="font-medium">Total</span>
      <span id="cartTotalBottom" class="text-xl font-bold">$0</span>
    </div>
    <div class="flex flex-col gap-2">
      <input
        id="clientName"
        placeholder="Nombre del cliente (opcional)"
        class="w-full rounded-lg border px-3 py-2"
      />
      <button
        id="confirmWhatsapp"
        class="w-full rounded-xl bg-emerald-600 text-white px-4 py-3"
        >Confirmar por WhatsApp</button
      >
      <button
        id="clearCart"
        class="w-full rounded-xl bg-gray-100 text-gray-800 px-4 py-2"
        >Vaciar</button
      >
    </div>
  </div>
</aside>

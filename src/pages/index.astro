---
import "../styles/global.css";
import Header from "../components/Header.astro";
import ProductCard from "../components/ProductCard.astro";
import CartDrawer from "../components/CartDrawer.astro";
import ProductModal from "../components/ProductModal.astro";
import products from "../data/products.json";

const total = 0;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Demo vendedor</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <Header total={total} />
    <main class="max-w-6xl mx-auto px-4 py-8">
      <h1 class="text-2xl font-semibold mb-6">Cat√°logo</h1>
      <section
        id="grid"
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6"
      >
        {products.map((p) => <ProductCard product={p} />)}
      </section>
    </main>

    <CartDrawer />
    <ProductModal />

    <script type="module">
      
    </script>
    <script type="module" src="/src/scripts/app.js"></script>
  </body>
</html>
